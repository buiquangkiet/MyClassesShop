@model MyClassesShop.Models.Order
@{
    ViewData["Title"] = "Cập nhật trạng thái đơn hàng";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">📝 Cập nhật trạng thái đơn hàng</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditOrder" method="post">
                <input type="hidden" asp-for="OrderId" />

                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-semibold">Trạng thái đơn hàng</label>
                    <select asp-for="Status" class="form-select">
                        <option value="Chờ xử lý">🕒 Chờ xử lý</option>
                        <option value="Đã giao">✅ Đã giao</option>
                        <option value="Đã hủy">❌ Đã hủy</option>
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Orders" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
