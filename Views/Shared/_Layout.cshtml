<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MyClassesShop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- NAVIGATION -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    🕶️ MyClassesShop
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <!-- LEFT SIDE MENU -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Dashboard" asp-action="Index">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Products" asp-action="Index">Quản lý sản phẩm</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Categories" asp-action="Index">Quản lý danh mục</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Users" asp-action="Index">Quản lý người dùng</a>
                                </li>
                                <li class="nav-item">
                                     <a class="nav-link" asp-controller="Admin" asp-action="Orders">Quản lý đơn hàng</a>
                                 </li>
                                 <li class="nav-item">
                                     <a class="nav-link" asp-controller="Discounts" asp-action="Index">Discount</a>
                                 </li>

                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Shop" asp-action="Index">Trang Chủ</a>
                               
                                </li>
                                <li class="nav-item">
                                 
                                    <a class="nav-link" asp-controller="Cart" asp-action="Index">Giỏ Hàng</a>
                                </li>
                                <li class="nav-item">
                                     <a class="nav-link" asp-controller="Orders" asp-action="History">Đơn hàng của tôi</a>
                                </li>

                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Privacy">Chính sách</a>
                            </li>
                        }
                    </ul>

                    <!-- RIGHT SIDE MENU -->
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown">
                                    Xin chào, @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Tài khoản</a></li>
                                    <li>
                                        <form method="post" asp-area="Identity" asp-page="/Account/Logout" id="logoutForm">
                                            <button type="submit" class="dropdown-item">Đăng xuất</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="container mt-4 flex-grow-1">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-white pt-5 pb-3 mt-auto">
    <div class="container">
        <div class="row">
            <!-- Cột 1: Giới thiệu -->
            <div class="col-md-4 mb-4">
                <h5 class="fw-bold">🕶️ MyClassesShop</h5>
                <p>Chuyên cung cấp kính mắt chất lượng, thời trang và chính hãng với giá tốt nhất thị trường.</p>
            </div>

            <!-- Cột 2: Liên kết nhanh -->
            <div class="col-md-4 mb-4">
                <h5 class="fw-bold">Liên kết nhanh</h5>
                <ul class="list-unstyled">
                    <li><a href="/" class="text-white text-decoration-none">Trang chủ</a></li>
                    <li><a href="/Shop" class="text-white text-decoration-none">Cửa hàng</a></li>
                    <li><a href="/Cart" class="text-white text-decoration-none">Giỏ hàng</a></li>
                    <li><a href="/Home/Privacy" class="text-white text-decoration-none">Chính sách bảo mật</a></li>
                </ul>
            </div>

            <!-- Cột 3: Liên hệ -->
            <div class="col-md-4 mb-4">
                <h5 class="fw-bold">Liên hệ</h5>
                <p><i class="bi bi-geo-alt-fill me-2"></i>123 Lê Lợi, Quận 1, TP.HCM</p>
                <p><i class="bi bi-envelope-fill me-2"></i>support@myclassesshop.vn</p>
                <p><i class="bi bi-telephone-fill me-2"></i>+84 123 456 789</p>

                <!-- Mạng xã hội -->
                <div class="mt-3">
                    <a href="#" class="text-white me-3"><i class="bi bi-facebook fs-4"></i></a>
                    <a href="#" class="text-white me-3"><i class="bi bi-instagram fs-4"></i></a>
                    <a href="#" class="text-white me-3"><i class="bi bi-youtube fs-4"></i></a>
                </div>
            </div>
        </div>

        <!-- Line cuối cùng -->
        <div class="text-center pt-3 border-top border-secondary mt-4">
            &copy; 2025 <strong>MyClassesShop</strong> – All rights reserved.
        </div>
    </div>
</footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
