@model MyClassesShop.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg border-0">
                <div class="row g-0">
                    <div class="col-md-5 d-flex align-items-center p-3">
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded mx-auto d-block" style="max-height: 300px; object-fit: contain;" />
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <h4 class="card-title text-primary">@Model.Name</h4>
                            <p class="text-muted">@Model.Description</p>

                            <dl class="row">
                                <dt class="col-sm-4">Giá</dt>
                                <dd class="col-sm-8 text-danger fw-bold">@Model.Price.ToString("N0") ₫</dd>

                                <dt class="col-sm-4">Tồn kho</dt>
                                <dd class="col-sm-8">@Model.StockQuantity</dd>

                                <dt class="col-sm-4">Màu sắc</dt>
                                <dd class="col-sm-8">@Model.Color</dd>

                                <dt class="col-sm-4">Loại</dt>
                                <dd class="col-sm-8">@Model.Type</dd>

                                <dt class="col-sm-4">Danh mục</dt>
                                <dd class="col-sm-8">@Model.Category?.Name</dd>
                            </dl>

                            <div class="mt-4 d-flex justify-content-between">
                                <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">🛠️ Chỉnh sửa</a>
                                <a asp-action="Index" class="btn btn-secondary">← Quay lại danh sách</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
