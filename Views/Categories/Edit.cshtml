@model MyClassesShop.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

<div class="container mt-4">
    <h2 class="text-warning fw-bold mb-3">✏️ Chỉnh sửa danh mục</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" class="shadow p-4 bg-light rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="CategoryId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Tên danh mục</label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục..." />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        ← Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        💾 Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
