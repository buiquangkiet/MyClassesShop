@model MyClassesShop.Models.Category

@{
    ViewData["Title"] = "Tạo danh mục";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-folder-plus me-2"></i> Tạo danh mục mới</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Tên danh mục</label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục..." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                ← Quay lại
                            </a>
                            <button type="submit" class="btn btn-success">
                                💾 Tạo danh mục
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
