@model IEnumerable<MyClassesShop.Models.Order>
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<h2 class="mb-4">🧾 Lịch sử đơn hàng của bạn</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Bạn chưa có đơn hàng nào.</div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="table-dark text-center">
            <tr>
                <th>Mã đơn</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-danger">@order.TotalAmount.ToString("N0") ₫</td>
                    <td>@order.Status</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
